<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aroche.proyecto1_edd.Registrar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_registrar"
        android:textColor="#1e3ff5"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"
        android:id="@+id/textView"
        app:layout_constraintHorizontal_bias="0.502" />
    <ImageView
        android:layout_width="111dp"
        android:layout_height="118dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_action_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/usuariotxt"
        tools:layout_editor_absoluteX="126dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usuariotxt"
        android:ems="10"
        android:singleLine="true"
        android:hint="@string/app_user"
        android:focusable="true"
        android:textColorHighlight="#7eff15"
        android:textColorHint="#1e3ff5"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordtxt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordtxt"
        android:ems="10"
        android:singleLine="true"
        android:hint="@string/app_pass"
        android:textColorHighlight="#7eff15"
        android:textColorHint="#1e3ff5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/registrarbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_registrar"
        android:id="@+id/registrarbtn"
        android:background="#2535e9"
        android:textColor="#504e4e"
        tools:layout_editor_absoluteY="410dp"
        app:layout_constraintRight_toLeftOf="@+id/cancelbtn"
        android:layout_marginRight="42dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/cancelbtn"
        android:background="#2535e9"
        android:textColor="#504e4e"
        tools:layout_editor_absoluteY="410dp"
        android:layout_marginRight="84dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
